{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}